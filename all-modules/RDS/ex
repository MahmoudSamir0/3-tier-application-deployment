# Define the VPC and subnets
resource "aws_vpc" "example_vpc" {
  cidr_block = "10.0.0.0/16"
}

resource "aws_subnet" "example_subnet_primary" {
  cidr_block = "10.0.1.0/24"
  vpc_id     = aws_vpc.example_vpc.id
}

resource "aws_subnet" "example_subnet_secondary" {
  cidr_block = "10.0.2.0/24"
  vpc_id     = aws_vpc.example_vpc.id
}

# Define the security groups
resource "aws_security_group" "example_primary_sg" {
  name_prefix = "example-primary-"
  vpc_id      = aws_vpc.example_vpc.id

  ingress {
    from_port   = 3306
    to_port     = 3306
    protocol    = "tcp"
    cidr_blocks = [aws_subnet.example_subnet_secondary.cidr_block]
  }
}

resource "aws_security_group" "example_secondary_sg" {
  name_prefix = "example-secondary-"
  vpc_id      = aws_vpc.example_vpc.id

  ingress {
    from_port   = 3306
    to_port     = 3306
    protocol    = "tcp"
    cidr_blocks = [aws_subnet.example_subnet_primary.cidr_block]
  }
}

# Define the primary RDS instance
resource "aws_db_instance" "example_primary_db" {
  identifier             = "example-primary-db"
  allocated_storage      = 20
  engine                 = "mysql"
  engine_version         = "8.0"
  instance_class         = "db.t3.micro"
  name                   = "example_db"
  username               = "admin"
  password               = "admin123"
  db_subnet_group_name   = "example_db_subnet_group"
  vpc_security_group_ids = [aws_security_group.example_primary_sg.id]
  subnet_group_name      = "example_db_subnet_group"

  tags = {
    Name = "example-primary-db"
  }
}

# Define the secondary RDS instance for synchronization
resource "aws_db_instance" "example_secondary_db" {
  identifier             = "example-secondary-db"
  engine                 = "mysql"
  engine_version         = "8.0"
  instance_class         = "db.t3.micro"
  name                   = "example_db_secondary"
  username               = "admin"
  password               = "admin123"
  db_subnet_group_name   = "example_db_subnet_group"
  vpc_security_group_ids = [aws_security_group.example_secondary_sg.id]
  subnet_group_name      = "example_db_subnet_group"
  source_db_instance_identifier = aws_db_instance.example_primary_db.id

  tags = {
    Name = "example-secondary-db"
  }
}

# Define the subnet group for the RDS instances
resource "aws_db_subnet_group" "example_db_subnet_group" {
  name       = "example-db-subnet-group"
  subnet_ids = [aws_subnet.example_subnet_primary.id, aws_subnet.example_subnet_secondary.id]

  tags = {
    Name = "example-db-subnet-group"
  }
}
